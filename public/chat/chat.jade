.chat-container(ng-controller='ChatController')
    //-add padding to .random to get extra box (10 px)
    .wrapper1(style="height:100%;") 
        .wrapper2(style="height:100%; padding:10px")
            .user-area(style="height:100%; width:25%; float:left; margin-right:5px")
                .chat-userbox(style=" height:100%")
                    ul#user-list(ng-repeat='user in users')
                        li {{user}}
            .message-area(style="height:100%; float: right; position:relative")
                .chat-messages(style=" width:100%; overflow-y:auto")
                    ul#message-list(ng-repeat='message in messages track by $index')
                        li {{message}}
                .chat-input(style=" position:absolute; bottom:0;  width:100%;")
                    .textarea(style="width:69%;float:left;")
                        form(role='form', ng-submit='saveMessage()')
                            .forms-group
                                input.form-control.chat-field(type='text', ng-model='chatInput', style="width:100%; border-radius:0px")
                    .submitbutton(style="width:30%;float:right")
                        button.form-control(type='submit', ng-click='saveMessage()', style="width:100%; border-radius:0px") Submit
    .name-container.bg-primary(style="display:none; position:absolute; top:40%; left:0; height:300px; width:100%")
        form(role='form', ng-submit='changeName()', style="height:100%")
            input.form-control.name-field(type='text', ng-model='nameInput', style=" height:20%; width:100%; border-radius:0px; text-align: center;")
         button.form-control(type='submit', ng-click='changeName()', style="width:10%; border-radius:0px") Submit




