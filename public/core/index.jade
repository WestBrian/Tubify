.container-fluid(data-ng-controller='CoreController', ng-cloak)
	.col-sm-3
		.searchBox
			form
				.form-group
					input.form-control#search(type='text', autocomplete='off', placeholder='Search...', data-ng-model='searchField', data-ng-keyup='search()')
			ul.list-group#searchList(data-ng-repeat='item in searchList')
				li.list-group-item
					.row
						.col-xs-6
							img.img-responsive(ng-src='{{item.thumb}}')
						.col-xs-6
							span.text-muted {{ item.title }}
		
		img(src= '/core/ariana.jpg')

		ul#list1(data-ng-repeat='item in list1')
			li {{ item }}
	.col-sm-6
		.embed-responsive.embed-responsive-16by9
			div(id='player')
	.col-sm-3
		p Soon to be featured playlist...

