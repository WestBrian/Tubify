.container-fluid(data-ng-controller='CoreController', ng-cloak)
	.row
		.col-sm-3.text-center.ariana
			.searchBox
				form(role='form', data-ng-submit='playVideo()')
					.form-group
						input.form-control#search(type='text', autocomplete='off', placeholder='Search...', data-ng-model='searchField', data-ng-change='search()', data-ng-keydown='displayKey($event)')
				ul.list-group
					li.list-group-item(data-ng-repeat='item in searchList' ng-class='{selected :$index==counter}')
						.row
							.col-xs-6
								img.img-responsive(ng-src='{{item.thumb}}')
							.col-xs-6
								span.text-muted {{ item.title }}
			ul.form-group.clear-padding
				li.list-group-item(data-ng-repeat='item in list1') {{ item }}
		.col-sm-6
			.embed-responsive.embed-responsive-16by9
				div#player
		.col-sm-3
			p Soon to be featured playlist.


