body
	background-color: #eee

.nav
	background-color: #6699FF
	padding: 10px
	margin-bottom: 20px
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.tubify-brand
	color: white

.style-glyph
	color: white
	cursor: pointer
	margin-right: 20px
	&:hover
		color: #CBE5FF
		border-bottom: 2px inset #476BB2

.vcenter
	display: block
	vertical-align: middle
	float: none

.ariana
	background-image: url('ariana.jpg')
	background-size: cover
	background-position: center
	background-repeat: repeat-y

.blue-wrapper
	padding: 10px
	margin-bottom: 10px
	background-color: #6699FF
	border-radius: 3px
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.5)

.recolor-white
	background-color: white

.selected
	background-color: #CBE5FF
	
.smaller-form
	width: 80%

.clear-padding
	padding: 0

.clear-margin
	margin: 0