body
	background-color: #eee

.nav
	background-color: #6699FF
	padding: 10px
	margin-bottom: 20px
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.tubify-brand
	
	& a
		color: white
		text-decoration: none

.style-glyph
	color: white
	cursor: pointer
	margin-right: 20px
	&:hover
		color: #CBE5FF
.test
	display: relative

.vcenter
	//display: inline-block
	//vertical-align: middle
	//float: none
	position: absolute
	top: 50%
	transform: translateY(-50%)

.ariana
	background-image: url('ariana.jpg')
	background-size: cover
	background-position: center
	background-repeat: repeat-y

.blue-wrapper
	padding: 10px
	margin-bottom: 10px
	background-color: #6699FF
	border-radius: 3px
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.5)

.recolor-white
	background-color: white

.selected
	background-color: #DFECF7
	cursor: pointer
	
.smaller-form
	width: 80%

.centered-card
	background-color: #6699FF
	color: white
	width: 60%
	padding: 15px
	margin: 20px auto
	border-radius: 5px
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.5)
	
	& .form-control
		max-width: 300px

.clear-padding
	padding: 0

.clear-margin
	margin: 0

.glyphicon:hover
	color: red

.input-style-box
	background-color: #6699FF
	color: white
	max-width: 30%
	margin: 20px auto
	padding: 20px
	border-radius: 5px
	box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5)
	
	& p
		margin: 10px 0 0 0
		
		& a
			color: #eee

.full-width
	width: 100%

.playing
	background-color: #c4dbee
	cursor: pointer
























