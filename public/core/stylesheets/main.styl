body
	background-color: #eee
	-webkit-font-smoothing: antialiased

// -- Helper classes -- //

.clear-all
	margin: 0
	padding: 0

.tubify-brand
	cursor: pointer
	//font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif;
	//font-family: 'Arial'

	font-size: 1.5em

	& a
		color: white
		text-decoration: none

		&:active
			color: #eee

.test
	display: relative

.vcenter
	display: flex
	align-items: center

.ariana
	background-image: url('ariana.jpg')
	background-size: cover
	background-position: center
	background-repeat: repeat-y

.blue-wrapper
	padding: 10px
	margin-bottom: 10px
	background-color: #6699FF
	//border-radius: 3px
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.5)

.recolor-white
	background-color: white

.selected
	background-color: #DFECF7
	cursor: pointer

.smaller-form
	width: 80%

.centered-card
	background-color: #6699FF
	color: white
	width: 60%
	padding: 15px
	margin: 20px auto
	border-radius: 5px
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.5)

	& .form-control
		max-width: 300px

.clear-padding
	padding: 0

.clear-margin
	margin: 0

// .glyphicon:hover
// 	color: red

.input-style-box
	background-color: #6699FF
	color: white
	//min-width: 300px
	max-width: 300px
	margin: 20px auto
	padding: 20px
	border-radius: 5px
	box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5)

	& p
		margin: 10px 0 0 0

		& a
			color: #eee

.full-width
	width: 100%

.playing
	background-color: #c4dbee
	cursor: pointer

.centered
	position: fixed
	top: 50%
	left: 50%
	transform: translate(-50%, -50%)

.pointer
	cursor: pointer

// -- Video list -- //

.video-item
	cursor: pointer
	max-height: 50px
	white-space: nowrap
	overflow: hidden
	text-overflow: ellipsis;

	&:hover
		background-color: #DFECF7

.remove-button

	&:hover
		color: red

.hide-overflow
	max-width: 80%
	overflow: hidden

// -- Sync -- //

.hover-orange
	cursor: pointer

	&:hover
		color: orange

// -- Search Results -- //

.search-result
	cursor: pointer
	padding: 5px 0



// -- Featured Playlists --//

.title-card
	background-color: white
	//font-family: 'Geneva'
	padding: 10px 0
	text-align: center
	box-shadow: 0 0 2px rgba(0, 0, 0, 0.5)

	& h1, h2, h3, h4, h5
		padding: 0
		margin: 0
		letter-spacing: 2px
		text-transform: uppercase

.featured-playlist
	cursor: pointer

	&:hover
		background-color: #eee

// -- Navbar -- //

.nav
	background-color: #6699FF
	padding: 10px
	margin-bottom: 20px
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

	& h1
		margin: 0
		padding: 0
	& h3
		margin: 0
		padding: 0
	& .form-group
		margin: 0

.circle
	//background-color: #80bfff
	border-radius: 50%
	width: 40px
	height: 40px
	//border: 2px solid #80bfff
	padding: 5px
	cursor: pointer

	&:active
		background-color: #4d88ff

.style-glyph
	color: white
	cursor: pointer
	margin: 0 auto
	font-size: 1.5em

.on
	color: orange

// Chat box

.chat-container
	height: 30vh
	min-height:200px
	background-color:white
ul
	padding-left: 7px
	margin:0px
	list-style-type: none

.wrapper1
	background-color:white
.wrapper2
	background-color: #6699FF
.user-area
	background-color:white
.message-area
	//width:73%
	width 'calc(%s + %s)' % (75% -10px)
	background-color: #6699FF
.chat-messages
	background-color:white
	height 'calc(%s + %s)' % (100% -44px)//34 px is height of input
	//height "calc(50%) "st
.chat-input
	background-color: #6699FF

.margin-both
	margin: 0 5px

.cool-box-border
	color: #808080
	border: 1px solid #ccddff
	background-color: #e6eeff
